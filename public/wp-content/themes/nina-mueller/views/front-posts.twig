<div class="container__posts">
	{% block content %}
		{% for post in posts %}
			<article class="container__posts__item">
				<a href="{{ post.get_permalink }}">
					<h3 class="container__posts__item__heading">{{ post.title }}</h3>
					<p class="container__posts__item__copy">{{post.post_content|excerpt(30)}}</p>
				</a>
			</article>
		{% endfor %}
	{% endblock %}
</div>
